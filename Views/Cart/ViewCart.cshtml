@model FirstWebApplication.Models.Cart
@{
    ViewData["Title"] = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}
<!DOCTYPE html>
<html>

<head>
    <!-- Basic -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <!-- Site Metas -->
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>ChocoLux</title>

    <link rel="stylesheet" href="~/css/site.css" />
    <!-- bootstrap core css -->
    <link rel="stylesheet" type="text/css" href="~/css/bootstrap.css" />
    <!-- slick slider stylesheet -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.5.9/slick.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.5.9/slick-theme.min.css" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">


    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- fonts style -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:400,600,700&display=swap" rel="stylesheet" />
    <!-- slick slider -->
    <link rel="stylesheet" href="~/css/slick-theme.css" />
    <!-- font awesome style -->
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="~/css/style.css" rel="stylesheet" />
    <!-- responsive style -->
    <link href="~/css/responsive.css" rel="stylesheet" />

</head>
<body>
<h2>Your Cart</h2>

@if (Model.Items.Count == 0)
{
    <p>Your cart is empty</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Product.product_name</td>
                    <td>
                            @* <form asp-controller="Cart" asp-action="UpdateCart" method="post">
                                <input type="hidden" name="productId" value="@item.Product.product_id" />
                                <input type="number" name="quantity" value="@item.Quantity" />
                                <button type="submit">Update</button>
                            </form> *@
                            @* <form asp-controller="Cart" asp-action="UpdateCart" method="post" class="quantity-form">
                                <input type="hidden" name="productId" value="@item.Product.product_id" />
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <button type="submit" name="quantity" value="@Math.Max(1, item.Quantity - 1)" class="btn btn-outline-secondary">
                                            <i class="fas fa-minus"></i>
                                        </button>
                                    </div>
                                    <input type="number" name="quantity" value="@item.Quantity" class="form-control quantity-input" />
                                    <div class="input-group-append">
                                        <button type="submit" name="quantity" value="@Math.Max(1, item.Quantity + 1)" class="btn btn-outline-secondary">
                                            <i class="fas fa-plus"></i>
                                        </button>
                                    </div>
                                </div>
                                <button type="submit" style="display: none;">Update</button>
                            </form> *@
                            <form asp-controller="Cart" asp-action="UpdateCart" method="post" class="quantity-form">
                                <input type="hidden" name="productId" value="@item.Product.product_id" />
                                <input type="hidden" id="quantityInput" name="quantity" value="@item.Quantity" />
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <button type="button" class="btn btn-outline-secondary minus-btn" onclick="decreaseQuantity()">
                                            <i class="fas fa-minus"></i>
                                        </button>
                                    </div>
                                    <input id="quantityInput-@item.Product.product_id" type="number" name="quantity" value="@item.Quantity" class="form-control quantity-input" readonly />
                                    <div class="input-group-append">
                                        <button type="button" class="btn btn-outline-secondary plus-btn" onclick="increaseQuantity()">
                                            <i class="fas fa-plus"></i>
                                        </button>
                                    </div>
                                </div>
                                <button type="submit" style="display: none;">Update</button>
                            </form>

                            <script>
                                function increaseQuantity() {
                                    var inputField = document.getElementById("quantityInput-@item.Product.product_id");
                                    var newValue = parseInt(inputField.value) + 1;
                                    inputField.value = newValue;
                                    var quantityInput = document.getElementById("quantityInput");
                                    var currentValue = parseInt(quantityInput.value);
                                    var newValue = currentValue + 1;
                                    // Update the input field with the new value
                                    quantityInput.value = newValue;
                                    // Trigger form submission
                                    var form = document.querySelector('.quantity-form');
                                    form.submit();
                                }

                                function decreaseQuantity() {
                                    var inputField = document.getElementById("quantityInput-@item.Product.product_id");
                                    var newValue = Math.max(1, parseInt(inputField.value) - 1);
                                    inputField.value = newValue;
                                    var quantityInput = document.getElementById("quantityInput");
                                    var currentValue = parseInt(quantityInput.value);
                                    var newValue = currentValue - 1;
                                    // Update the input field with the new value
                                    quantityInput.value = newValue;
                                    // Trigger form submission
                                    var form = document.querySelector('.quantity-form');
                                    form.submit();
                                }
                            </script>


                    </td>
                    <td>@item.Product.product_price</td>
                    <td>@(item.Quantity * item.Product.product_price)</td>
                        <td>
                            <!-- Remove Item Button -->
                            <form method="post" action="@Url.Action("RemoveFromCart", "Cart")">
                                <input type="hidden" name="productId" value="@item.Product.product_id" />
                                <button type="submit" class="btn btn-danger">Remove</button>
                            </form>
                        </td>
                </tr>
            }
        </tbody>
        
    </table>

        <!-- Clear Cart Button -->
        <form method="post" action="@Url.Action("ClearCart", "Cart")">
            <button type="submit" class="btn btn-danger">Clear Cart</button>
        </form>

    <!-- Checkout Button -->
        <div class="row justify-content-end">
            <div class="col-auto">
                <form method="post" action="@Url.Action("Checkout", "Orders")">
                    <button type="submit" class="btn btn-primary btn-brown">Checkout</button>
                </form>
            </div>
        </div>

}
    <!-- jQuery -->
    <script src="~/js/jquery-3.4.1.min.js"></script>
    <!-- bootstrap js -->
    <script src="~/js/bootstrap.js"></script>
    <!-- slick slider -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.5.9/slick.min.js"></script>
    <!-- custom js -->
    <script src="~/js/custom.js"></script>
    <!-- Custom Styles -->
    <style>
        .btn-brown {
            background-color: #8B4513; /* Brown color */
            border-color: #8B4513; /* Brown color for border */
        }

            .btn-brown:hover {
                background-color: #654321; /* Darker brown on hover */
                border-color: #654321; /* Darker brown for border on hover */
            }


    </style>
</body>
</html>

