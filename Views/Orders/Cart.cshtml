@model List<FirstWebApplication.Models.OrderDetails>

@if (Model == null || !Model.Any())
{
    <p>No order details available.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Total Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>@item.product_price</td>
                    @* <td>@item.TotalPrice</td> *@
                </tr>
            }
        </tbody>
    </table>
}
