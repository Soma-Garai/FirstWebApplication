@model FirstWebApplication.Models.Products

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Product</h1>

<h3>Are you sure you want to delete this product?</h3>
<div>
    <h4>Product Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.product_name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.product_name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.product_description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.product_description)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.product_price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.product_price)
        </dd>
    </dl>

    <form asp-action="DeleteProductConfirmed" method="post">
        <input type="hidden" asp-for="product_id" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
